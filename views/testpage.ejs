<script>

document.addEventListener('DOMContentLoaded', generateTableOfContents);

function generateTableOfContents() {
        const tocContainer = document.getElementById('tableOfContents');
        const headers = document.querySelectorAll('h1, h2, h3, h4, h5, h6');

        if (tocContainer && headers.length > 0) {
            const ul = document.createElement('ul');
            let currentList = ul;

            headers.forEach((header, index) => {
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = '#';
                a.textContent = `${header.textContent}`;
                a.onclick = () => scrollToHeader(index);

                li.appendChild(a);

                // Determine the header level and adjust indentation
                const headerLevel = parseInt(header.tagName.charAt(1)); // Extract the number from 'h2' or 'h3'
                if (headerLevel > 1) {
                    // Create nested ul elements for h3 and beyond
                    const nestedUl = document.createElement('ul');
                    currentList.lastElementChild.appendChild(nestedUl);
                    currentList = nestedUl;
                }

                currentList.appendChild(li);
            });

            tocContainer.appendChild(ul);
        }
    }

    // Smooth scroll to the header at the specified index
    function scrollToHeader(index) {
        const headers = document.querySelectorAll('section h2');

        if (index >= 0 && index < headers.length) {
            headers[index].scrollIntoView({ behavior: 'smooth' });
        }
    }
</script>

