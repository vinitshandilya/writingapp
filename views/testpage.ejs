<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic Input Box</title>
  <style>
    /* Add some basic styling to the input box */
    #inputBox {
      display: none;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  </style>
</head>
<body>

<button onclick="showInputBox()">Show Input Box</button>

<div id="inputBox">
  <input type="text" id="userInput" placeholder="Enter text">
</div>

<script>
  function showInputBox() {
    var inputBox = document.getElementById('inputBox');
    inputBox.style.display = 'block';

    // Add a click event listener to the document
    document.addEventListener('click', function handleClickOutside(e) {
      // Check if the clicked element is not the input box
      if (!inputBox.contains(e.target) && e.target.id !== 'userInput') {
        // Get the user input text
        var userInput = document.getElementById('userInput').value;

        // Print the user input text to the console
        console.log('User input:', userInput);

        // Hide the input box
        inputBox.style.display = 'none';

        // Remove the click event listener after handling one click outside
        document.removeEventListener('click', handleClickOutside);
      }
    });
  }
</script>

</body>
</html>
