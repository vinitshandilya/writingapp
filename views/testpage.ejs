<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quill Preview</title>
  <!-- Include Quill CSS -->
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body>

<!-- Your content -->
<div id="preview"></div>

<!-- Include Quill JS -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script>
  // Initialize Quill in read-only mode
  var quill = new Quill('#preview', {
    readOnly: true,
    theme: 'snow' // You can choose a different theme if needed
  });

  // Set the content manually
  var previewContent = '<p class="ql-align-center">How does it look?!</p>';
  quill.clipboard.dangerouslyPasteHTML(previewContent);
</script>

</body>
</html>
