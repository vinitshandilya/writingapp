<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS (optional, if you need JavaScript features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>The writing app</title>
    <link href="indexpage.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/simplemde@1.11.2/dist/simplemde.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hedvig+Letters+Serif:opsz@12..24&display=swap" rel="stylesheet">

    <style>

        a {
            color: #B0A648;
        }

        .footnote {
          position: relative;
          cursor: help;
          border-bottom: 1px dashed #B0A648;
        }
    
        .footnote:hover::after {
            content: attr(data-content);
            display: block;
            position: absolute;
            left: 100%;
            top: 0;
            width: 600px;
            max-width: 300px; /* Set the maximum width to 300px */
            white-space: normal; /* Allow text to wrap to a new line */
            word-wrap: break-word; /* Allow word wrapping */
            padding: 0.5em;
            background: #ffffff;
            border: 1px solid #d7d0d0;
            box-shadow: 2px 2px 5px rgba(41, 41, 41, 0.2);
            z-index: 1;
            border-radius: 15px;
            font-size: 13px;
            color: #333;
            line-height: 1.4;
        }

        .left-section {
            padding: 15px;
            height: 100vh;
        }

        .right-section {
            background-color: #f2f2f2;
            height: 100vh;
            padding: 15px;
        }

        .list-group-item {
            border: none !important;
            border-top: 1px solid rgba(0, 0, 0, 0.125) !important;
            background-color: transparent !important;
            line-height: 2.0;
            font-weight: bold;
        }


        #footnoteList {
            margin-top: auto; /* Push to the bottom */
            list-style-type: none; /* Remove bullet points */
            padding: 0;
        }

        #footnoteList li {
            padding-left: 0px;
            font-size: 15px;
            font-family: 'Times New Roman', Times, serif;
            color: #585858;
        }

        figcaption {
            padding-left: 0px;
            padding-top: 15px;
            font-size: 15px;
            font-family: 'Times New Roman', Times, serif;
            color: #585858;
        }

        .canvas {
            font-family: 'Hedvig Letters Serif', serif;
            line-height: 2.0;
        }

        .navbar {
            padding-left: 20px;
            padding-right: 20px;
            font-weight: bold;
        }

        .blog-title {
            color: #B0A648;
        }

        .ribbon-area {
            color: #B0A648;
        }

        #blogDetailsContainer img {
            max-width: 700px; /* Set the maximum width */
            height: auto; /* Maintain the aspect ratio */
        }


    </style>
</head>
<body>
  <body>
    <% var currentBlogId; %>
    <% var displayName = user.firstname ? user.firstname : user.username; %>

    <div class="d-flex" id="wrapper">
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar navbar-expand-lg navbar-light" style="background-color: transparent;">
                <a class="navbar-brand" href="/homepage"><i class="fa-solid fa-angle-left"></i></a></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item"><a class="nav-link" style="margin-right: 15px;" href="/index/createnew" id="createNewLink"><i class="fa-solid fa-plus"></i></a></li>
                        <li class="nav-item"><a class="nav-link" style="margin-right: 15px;" href="#!" id="editLink"><i class="fa-regular fa-pen-to-square"></i></a></li>
                        <li class="nav-item"><a class="nav-link"style="margin-right: 15px;" href="#!" id="deleteLink" onclick="return confirm('Are you sure you want to delete this blog?')"><i class="fa-regular fa-trash-can"></i></a></li>
                        <li class="nav-item active"><a class="nav-link" href="/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></a></li>
                        <li class="nav-item active"><a class="nav-link" href="/index/profile"> <%= displayName %></a></li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <div class="row">
                    <!-- Left Section (25% width) -->
                    <div class="col-md-3">

                    </div>
            
                    <!-- Middle Section (50% width) -->
                    <div class="col-md-6">
                        <div id="blogDetailsContainer" class="container-fluid"></div>
                        <br>
                        <hr>
                        <ul id="footnoteList"></ul>
                        <br>
                        <ul class="list-group">
                            <% blogs.forEach(blog => { %>
                                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/index/blogs/<%= blog._id %>" data-blog-id="<%= blog._id %>"><%= blog.title %></a>
                            <% }); %>
                        </ul>
                        <h3>Discover authors</h3>
                            <ul class="list-group">
                                <% communityusers.forEach(communityuser => { %>
                                 <% var displayName = communityuser.firstname ? communityuser.firstname + ' ' + communityuser.lastname + ' (@' + communityuser.username + ')' : communityuser.username; %>
                                    <li class="list-group-item"><%= displayName %></li>
                                <% }); %>
                            </ul>
                    </div>
            
                    <!-- Right Section (25% width) -->
                    <div class="col-md-3">




                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/marked@3.0.2/marked.min.js"></script>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="script.js"></script>


    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // Fetch details for the first blog during initial page load
            const urlParams = new URLSearchParams(window.location.search);
            var highlightBlogId = urlParams.get('id');
            console.log(highlightBlogId);

            if (highlightBlogId !== null && highlightBlogId !== undefined) {
                loadBlogDetails(highlightBlogId);
            } else {
                var firstBlogLink = document.querySelector('.list-group-item');
                if (firstBlogLink) {
                    var firstBlogId = firstBlogLink.getAttribute('data-blog-id');
                    currentBlogId = firstBlogId;
                    loadBlogDetails(firstBlogId);
                }
            }
            
            // Add click event listeners to all blog links
            var blogLinks = document.querySelectorAll('.list-group-item');
            blogLinks.forEach(function (link) {
                link.addEventListener('click', function (event) {
                    // Prevent the default behavior of the link (navigation)
                    event.preventDefault();
                    
                    // Get the blog ID from the data attribute
                    var blogId = link.getAttribute('data-blog-id');
                    loadBlogDetails(blogId);
                    currentBlogId = blogId;
                });
            });
        });
    
        function loadBlogDetails(blogId) {
            // AJAX request to the server to fetch blog details
            var xhr = new XMLHttpRequest();
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var blogDetails = JSON.parse(xhr.responseText);
                    updateBlogDetails(blogDetails);
                    clearFootnoteArea();
                    listFootnotes();
                }
            };
            xhr.open('GET', '/index/blogs/' + blogId, true);
            xhr.send();
        }
    
        function updateBlogDetails(blogDetails) {

            var blogDetailsContainer = document.getElementById('blogDetailsContainer');
            console.log(blogDetails.blog.timestamp);
            const dateObj = new Date(blogDetails.blog.timestamp);
            const formatString = { month: 'short', day: 'numeric', year: 'numeric' };
            const formattedTime = dateObj.toLocaleString("en-US", formatString).toUpperCase();
            console.log(formattedTime);

            var timeToread = calculateReadingTime(blogDetails.blog.body, 250);

            var htmlContent = marked(blogDetails.blog.body);
            blogDetailsContainer.innerHTML = `
                <h1 class="mt-4 blog-title">${blogDetails.blog.title}</h1>
                <p style="font-size: 22px; color: #686868">${blogDetails.blog.subtitle}</p>
                <div class="ribbon-area">
                    <p style="font-size: smaller; display: inline-block; margin-right: 10px;"><i class="fa-regular fa-pen-to-square"></i> ${blogDetails.blog.author}</p>
                    <p style="font-size: smaller; display: inline-block; margin-right: 10px;"><i class="fa-regular fa-calendar"></i> ${formattedTime}</p>
                    <p style="font-size: smaller; display: inline-block; margin-right: 10px;"><i class="far fa-clock"></i> ${timeToread}</p>
                </div>
                <div class="canvas"><p>${htmlContent}</p></div>
                <!-- TODO: Add more content as needed -->
            `;
            var editLink = document.getElementById('editLink');
            if (editLink) {
                editLink.href = `/index/blogs/${blogDetails.blog._id}/edit`;
            }

            var deleteLink = document.getElementById('deleteLink');
            if (deleteLink) {
                deleteLink.href = `/index/blogs/${blogDetails.blog._id}/delete`;
            }
        }

        function listFootnotes() {
            clearFootnoteArea();
            var footnoteList = document.getElementById('footnoteList');
            var footnoteElements = document.querySelectorAll('.footnote');

            if (footnoteElements.length > 0) {
                var heading = document.createElement('h4');
                heading.innerText = 'Footnotes';
                heading.style.fontWeight = 'bold';
                heading.style.color = '#B0A648';
                footnoteList.appendChild(heading);
                var footnoteArray = Array.from(footnoteElements);

                footnoteArray.sort(function (a, b) {
                    var aValue = parseInt(a.textContent.match(/\[(\d+)\]/)[1]);
                    var bValue = parseInt(b.textContent.match(/\[(\d+)\]/)[1]);
                    return aValue - bValue;
                });

                footnoteArray.forEach(function (element) {
                    var content = element.textContent.trim();
                    const match = content.match(/\[(\d+)\]/);
                    if(match) {
                        const number = match[1];
                        var dataContent = element.getAttribute('data-content');
                        console.log(`${number}: ${dataContent || 'No data-content attribute'}`);
                        var listItem = document.createElement('li');
                        listItem.textContent = `${number}: ${dataContent || 'No data-content attribute'}`;
                        footnoteList.appendChild(listItem);
                    }
                    
                });
            }
        }

        function clearFootnoteArea() {
            var footnoteList = document.getElementById('footnoteList');
            footnoteList.innerHTML = '';
        }

        function calculateReadingTime(paragraph, wordsPerMinute) {
            // Assuming an average of 200 words per minute
            const defaultWordsPerMinute = 200;
            const wpm = wordsPerMinute || defaultWordsPerMinute;
            const wordCount = paragraph.split(/\s+/).length;
            const readingTime = Math.ceil(wordCount / wpm);

            return readingTime + ' MIN READ';
        }

    </script>

</body>
</html>

