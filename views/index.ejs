<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS (optional, if you need JavaScript features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <title>The writing app</title>
    <link href="indexpage.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/simplemde@1.11.2/dist/simplemde.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous">

    <style>
        .footnote {
          position: relative;
          cursor: help;
          border-bottom: 1px dashed #000;
        }
    
        .footnote:hover::after {
          content: attr(data-content);
          display: block;
          position: absolute;
          left: 100%;
          top: 0;
          width: 200px;
          padding: 0.5em;
          background: #ffffff;
          border: 1px solid #d7d0d0;
          box-shadow: 2px 2px 5px rgba(41, 41, 41, 0.2);
          z-index: 1;
          border-radius: 15px 15px 15px 15px;
        }

        #footnoteList {
            margin-top: auto; /* Push to the bottom */
            list-style-type: none; /* Remove bullet points */
            padding: 0;
        }

        #footnoteList li {
            font-size: 14px; /* Adjust the font size */
            font-style: italic; /* Set to italics */
            padding-left: 0px;
        }

    </style>
</head>
<body>
  <body>
    <% var currentBlogId; %>

    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light"><%= user.username %> </div>
            <div class="list-group list-group-flush">
                <% blogs.forEach(blog => { %>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" href="/index/blogs/<%= blog._id %>" data-blog-id="<%= blog._id %>"><%= blog.title %></a>
                    <!-- <p style="font-size: smaller;"><%= blog.subtitle %></p>
                    <p style="font-size: smaller; font-style: italic;"><%= blog.author %></p> -->
                <% }); %>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item"><a class="nav-link" style="margin-right: 15px;" href="/index/createnew" id="createNewLink"><i class="fa-solid fa-plus"></i></a></li>
                            <li class="nav-item"><a class="nav-link" style="margin-right: 15px;" href="#!" id="editLink"><i class="fa-regular fa-pen-to-square"></i></a></li>
                            <li class="nav-item"><a class="nav-link"style="margin-right: 15px;" href="#!" id="deleteLink" onclick="return confirm('Are you sure you want to delete this blog?')"><i class="fa-regular fa-trash-can"></i></a></li>
                            <li class="nav-item active"><a class="nav-link" href="/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">More</a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#!">Action</a>
                                    <a class="dropdown-item" href="#!">Another action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#!">Something else here</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div id="blogDetailsContainer" class="container-fluid"></div>
            <div class="container-fluid">
                <ul id="footnoteList"></ul>
                <!-- <p>
                    Make sure to keep all page content within the
                    <code>#page-content-wrapper</code>
                    . The top navbar is optional, and just for demonstration. Just create an element with the
                    <code>#sidebarToggle</code>
                    ID which will toggle the menu when clicked.
                </p> -->
            </div>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/marked@3.0.2/marked.min.js"></script>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="script.js"></script>


    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // Fetch details for the first blog during initial page load
            const urlParams = new URLSearchParams(window.location.search);
            var highlightBlogId = urlParams.get('highlight');
            console.log(highlightBlogId);

            if (highlightBlogId !== null && highlightBlogId !== undefined) {
                loadBlogDetails(highlightBlogId);
            } else {
                var firstBlogLink = document.querySelector('.list-group-item');
                if (firstBlogLink) {
                    var firstBlogId = firstBlogLink.getAttribute('data-blog-id');
                    currentBlogId = firstBlogId;
                    loadBlogDetails(firstBlogId);
                }
            }
            
            // Add click event listeners to all blog links
            var blogLinks = document.querySelectorAll('.list-group-item');
            blogLinks.forEach(function (link) {
                link.addEventListener('click', function (event) {
                    // Prevent the default behavior of the link (navigation)
                    event.preventDefault();
                    
                    // Get the blog ID from the data attribute
                    var blogId = link.getAttribute('data-blog-id');
                    
                    // Call the function to load blog details
                    loadBlogDetails(blogId);
                    currentBlogId = blogId;
                });
            });
        });
    
        function loadBlogDetails(blogId) {
            // AJAX request to the server to fetch blog details
            var xhr = new XMLHttpRequest();
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var blogDetails = JSON.parse(xhr.responseText);
                    updateBlogDetails(blogDetails);
                    clearFootnoteArea();
                    listFootnotes();
                }
            };
            xhr.open('GET', '/index/blogs/' + blogId, true);
            xhr.send();
        }
    
        function updateBlogDetails(blogDetails) {

            var blogDetailsContainer = document.getElementById('blogDetailsContainer');
            console.log(blogDetails.blog.timestamp);
            const dateObj = new Date(blogDetails.blog.timestamp);
            const formatString = { month: 'long', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', hour12: true };
            const formattedTime = dateObj.toLocaleString("en-US", formatString);
            console.log(formattedTime);

            var htmlContent = marked(blogDetails.blog.body);
            blogDetailsContainer.innerHTML = `
                <h1 class="mt-4">${blogDetails.blog.title}</h1>
                <p style="font-size: smaller; font-weight: bold;">${blogDetails.blog.subtitle}</p>
                <div>
                <p style="font-size: smaller; color: #0d6efd; display: inline-block;"><i class="fa-regular fa-pen-to-square"></i> ${blogDetails.blog.author}</p>
                <p style="font-size: smaller; color: #0d6efd; display: inline-block; margin-left: 10px;"><i class="far fa-clock"></i> ${formattedTime}</p>
                </div>
                <p>${htmlContent}</p>
                <!-- TODO: Add more content as needed -->
            `;
            var editLink = document.getElementById('editLink');
            if (editLink) {
                editLink.href = `/index/blogs/${blogDetails.blog._id}/edit`;
            }

            var deleteLink = document.getElementById('deleteLink');
            if (deleteLink) {
                deleteLink.href = `/index/blogs/${blogDetails.blog._id}/delete`;
            }
        }

        function listFootnotes() {
            var footnoteList = document.getElementById('footnoteList');
            var footnoteElements = document.querySelectorAll('.footnote');

            if (footnoteElements.length > 0) {
                var heading = document.createElement('h4');
                heading.innerText = 'Footnotes:';
                heading.style.fontWeight = 'bold';
                footnoteList.appendChild(heading);
                var footnoteArray = Array.from(footnoteElements);

                footnoteArray.sort(function (a, b) {
                    var aValue = parseInt(a.textContent.match(/\[(\d+)\]/)[1]);
                    var bValue = parseInt(b.textContent.match(/\[(\d+)\]/)[1]);
                    return aValue - bValue;
                });

                footnoteArray.forEach(function (element) {
                    var content = element.textContent.trim();
                    var dataContent = element.getAttribute('data-content');
                    console.log(`${content}: ${dataContent || 'No data-content attribute'}`);
                    var listItem = document.createElement('li');
                    listItem.textContent = `${content}: ${dataContent || 'No data-content attribute'}`;
                    footnoteList.appendChild(listItem);
                });
            }
        }


        function clearFootnoteArea() {
            var footnoteList = document.getElementById('footnoteList');
            footnoteList.innerHTML = '';
        }

    </script>

</body>
</html>

